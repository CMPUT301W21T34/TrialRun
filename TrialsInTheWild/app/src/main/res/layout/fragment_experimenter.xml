<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_subscribed_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Subscribed Experiments"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ListView
        android:id="@+id/lv_subscribed_experiments"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_search_exp_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/et_exp_keyword_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="Find keyword in experiment"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_search_exp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/ic_baseline_search_24"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:rippleColor="@android:color/transparent" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_exp_search_results"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>